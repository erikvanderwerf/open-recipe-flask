    "source": [{"type": "website", "url": "https://chowdown.io/recipes/red-berry-tart.html", "author": "Clark - Chowdown"}],
    "prep": "",
    "cook": "",
    "yield": "1 tart",
    "groups": ["crust", "filling", "topping"],
    "equipment": ["processor", "pan", "saucepan"],
    "ingredients": [
      {"type": "self", "name": "graham", "title": "graham cracker crumbs", "amount": "2 cups", "group": "crust"},
      {"type": "link", "name": "butter", "use": [{"link": "root.butter", "amount": "2 tbsp"}], "group": "crust"},
      {"type": "link", "name": "crust_sugar", "use": [{"link": "root.sugar_white", "amount": "1/3 cup"}], "group": "crust"},
      {"type": "self", "name": "cinnamon", "title": "cinnamon", "amount": "1 tsp", "group": "crust"},
      {"type": "link", "name": "filling_sugar", "use": [{"link": "root.sugar_white", "amount": "1/2 cup"}], "group": "filling"},
      {"type": "self", "name": "flour", "title": "all-purpose flour", "amount": "1/4 cup", "group": "filling"},
      {"type": "self", "name": "salt", "title": "salt", "amount": "1/2 tsp", "group": "filling"},
      {"type": "self", "name": "milk", "title": "milk", "amount": "2 cups", "group": "filling"},
      {"type": "self", "name": "yolks", "title": "egg yolks, lightly beaten", "amount": "2", "group": "filling"},
      {"type": "self", "name": "vanilla", "title": "vanilla extract", "amount": "1/2 tsp", "group": "filling"},
      {"type": "self", "name": "raspberries", "title": "raspberries", "amount": "1/2 cup", "group": "topping"},
      {"type": "self", "name": "strawberries", "title": "strawberries", "amount": "1/2 cup", "group": "topping"},
      {"type": "link", "name": "topping_sugar", "use": [{"link": "root.sugar_white", "amount": "1/4 cup"}], "group": "topping"},
      {"type": "self", "name": "honey", "title": "honey", "amount": "1 squirt", "group": "topping"}
    ],
    "instructions": [
      {"type": "header", "groups": ["crust"], "title": "Graham Cracker Crust"},
      {"type": "image", "groups": ["crust"], "image": "images/crust.jpg", "important": false},
      {"type": "text", "groups": ["crust"], "use": ["graham"], "text": "pulse graham cracker in food processor or use muddler to crumb in bowl"},
      {"type": "text", "groups": ["crust"], "use": ["butter", "crust_sugar", "cinnamon"], "text": "combine melted butter, graham cracker crumbs, sugar, and cinnamon in a bowl"},
      {"type": "text", "groups": ["crust"], "use": [], "text": "press into pan, forming into crust shape"},
      {"type": "text", "groups": [], "use": [], "text": "Bake the crust and let it cool"},
      {"type": "header", "groups": ["filling"], "title": "Vanilla Custard Filling"},
      {"type": "image", "groups": ["crust"], "image": "images/filling.jpg", "important": false},
      {"type": "text", "groups": ["filling"], "use": ["filling_sugar", "flour", "salt", "milk"], "text": "In a small saucepan, combine the sugar, flour and salt. Stir in milk until smooth."},
      {"type": "text", "groups": ["filling"], "use": [], "text": "Cook and stir over medium-high heat until thickened and bubbly."},
      {"type": "timer", "groups": ["filling"], "use": [], "time": "2 min", "text": "Reduce heat; cook and stir 2 minutes longer."},
      {"type": "text", "groups": ["filling"], "use": ["yolks"], "text": "Remove from the heat. Stir a small amount of hot filling into egg yolks; return all to the pan."},
      {"type": "timer", "groups": ["filling"], "use": [], "time": "2 min", "text": "Bring to a gentle boil, stirring constantly; cook and stir 2 minutes longer."},
      {"type": "text", "groups": ["filling"], "use": ["vanilla"], "text": "Remove from the heat. Gently stir in vanilla."},
      {"type": "text", "groups": [], "use": [], "text": "Pour into crust"},
      {"type": "header", "groups": ["topping"], "title": "Red Berry Dessert Topping"},
      {"type": "image", "groups": ["crust"], "image": "images/topping.jpg", "important": false},
      {"type": "text", "groups": ["topping"], "use": ["raspberries", "strawberries"], "text": "Dice berries"},
      {"type": "text", "groups": ["topping"], "use": ["topping_sugar", "honey"], "text": "Combine all ingredients"},
      {"type": "text", "groups": ["topping"], "use": [""], "text": "Let rest for 15 mins"},
      {"type": "text", "groups": [], "use": [""], "text": "Spread berry topping over the top"}
    ]
  }